<body>
    <div id="home" class="content">
        <header>
            <a href="./">
                <img src="/images/logo.svg" alt="Rocket.Q-logo">
            </a>
        </header>
       
        <div id="bg">
            <div class="ball top"></div>
            <div class="ball bottom"></div>
        </div>

        <main>
            <div class="container">
                <section>
                    <h2>Crie sua pr√≥pria sala</h2>
                    <form action="/create-room" method="POST">
                        <label class="sr-only" for="room-id">Insira uma senha</label>
                        <input type="password" name="password" id="room-pass" placeholder="Insira uma senha">
                        <button>
                            <img src="/images/users-white.svg" alt="Entrar ma sala">
